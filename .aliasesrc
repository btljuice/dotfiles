#!/bin/bash

alias ls="ls --color"
alias ll="ls -l"
alias la="ls -a"
alias lla="ls -la"
alias vo="vim -R"
alias info="info --vi-keys"
alias du="du -h"
alias du0="du -d 0 -h"
alias du1="du -d 1 -h"
alias v="sf -e vim"
alias yaourt-nodeps="yaourt -Qdtq --aur"
alias yaourt-norepo="yaourt -Qmq --aur"
alias yaourt-update="yaourt -Syu --aur"
alias yaourt-remove-nodeps="yaourt -Qdtq --aur | yaourt -Rs -"
alias yaourt-remove-norepo="yaourt -Qmq --aur | yaourt -Rs -"
